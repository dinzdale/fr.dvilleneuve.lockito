<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat" parent="@style/Platform.V14.AppCompat" />
    <style name="Platform.AppCompat.Light" parent="@style/Platform.V14.AppCompat.Light" />
    <style name="ActionBar.Solid.Lockito" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:progressBarStyle">@style/ProgressBar.Lockito</item>
        <item name="android:background">@drawable/ab_solid_lockito</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_lockito</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_lockito</item>
    </style>
    <style name="ActionBar.Transparent.Lockito" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:progressBarStyle">@style/ProgressBar.Lockito</item>
        <item name="android:background">@drawable/ab_transparent_lockito</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Button" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.EventContent.Info" parent="@style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.EventContent.Line2" parent="@style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Time" parent="@style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    <style name="Theme.Lockito" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Lockito</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Lockito</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Lockito</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_lockito</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Lockito</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Lockito</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Lockito</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Lockito.Widget</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_lockito</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_lockito</item>
    </style>
    <style name="Theme.Lockito.Widget" parent="@style/Theme.AppCompat">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Lockito</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Lockito</item>
    </style>
    <style name="Platform.V14.AppCompat" parent="@style/Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="@style/Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>
        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
</resources>
